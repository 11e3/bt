# VBO Trading Bot Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Multiple Upbit Accounts
# You can add as many accounts as needed
# Each account needs NAME, ACCESS_KEY, and SECRET_KEY
# Get from: https://upbit.com/mypage/open_api_management
# =============================================================================

# Main Account
ACCOUNT_1_NAME=main
ACCOUNT_1_ACCESS_KEY=your_main_access_key_here
ACCOUNT_1_SECRET_KEY=your_main_secret_key_here

# Secondary Account (optional)
# ACCOUNT_2_NAME=secondary
# ACCOUNT_2_ACCESS_KEY=your_secondary_access_key_here
# ACCOUNT_2_SECRET_KEY=your_secondary_secret_key_here

# Tertiary Account (optional)
# ACCOUNT_3_NAME=trading
# ACCOUNT_3_ACCESS_KEY=your_trading_access_key_here
# ACCOUNT_3_SECRET_KEY=your_trading_secret_key_here

# =============================================================================
# Telegram Bot
# 1. Create bot: https://t.me/BotFather -> /newbot
# 2. Get chat ID: https://t.me/userinfobot or send message to bot and check
#    https://api.telegram.org/bot<TOKEN>/getUpdates
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# =============================================================================
# Strategy Parameters (Optional - defaults shown)
# =============================================================================
# SYMBOLS=["BTC", "ETH", "XRP", "TRX", "ADA"]
# TOP_N=3
# MOM_LOOKBACK=15
# LOOKBACK=5
# MULTIPLIER=2

# =============================================================================
# Trading Parameters (Optional - defaults shown)
# =============================================================================
# MIN_ORDER_KRW=5000
# CHECK_INTERVAL_MINUTES=5
